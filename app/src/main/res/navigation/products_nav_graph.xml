<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/products_nav_graph"
    app:startDestination="@id/productsListFragment">

    <fragment
        android:id="@+id/productsListFragment"
        android:name="com.elektrobit.check24task.product.ui.ProductsListFragment"
        android:label="@string/products"
        tools:layout="@layout/fragment_products_list">
        <action
            android:id="@+id/action_productsListFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.elektrobit.check24task.product.ui.ProductsListFragment"
        android:label="@string/product_details"
        tools:layout="@layout/fragment_products_list">
        <argument
            android:name="product_id"
            app:argType="com.elektrobit.check24task.product.ui.adapter.ProductsListAdapter$Type" />

    </fragment>
</navigation>
